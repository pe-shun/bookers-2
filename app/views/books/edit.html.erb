<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <label>Title</label>
 <br> <%= f.text_field :title %>
</div>


 <div>
    <label>Body</label>
 <br> <%= f.text_area :body %>
 </div>

 <div>
   <%= f.submit 'Update Book' %>

   <% end %>

  </div>

<span>
 <%= link_to "Show", book_path(@book.id) %>

 |

 <%= link_to "Back", books_path %>
 </span>

